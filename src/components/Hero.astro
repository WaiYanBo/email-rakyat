---
import { Image } from 'astro:assets';
import defaultBg from '../assets/background.webp';

const { 
  line1 = "Hubungi Segera!!", 
  line2 = "Kami Bantu Anda", 
  line3 = "Hanya Dengan Cara Yang Sah!",
  showDetails = true,
  backgroundImage = defaultBg
} = Astro.props;

const heightClass = "h-[40vh] md:h-[50vh]"; 
---

<section class={`relative ${heightClass} flex items-center justify-center overflow-hidden bg-gray-900 transition-all duration-500`}>
  
  <div class="absolute inset-0 z-0">
    <Image 
      src={backgroundImage} 
      alt="Background Pattern" 
      class="w-full h-full object-cover opacity-100"
      loading="eager"
      fetchpriority="high"
      widths={[640, 768, 1024, 1280, 1536]} 
      sizes="(max-width: 768px) 100vw, 100vw"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/80"></div>
  </div>

  <div class="relative z-10 text-center px-4 max-w-5xl mx-auto w-full">
     {showDetails ? (
       <div class="flex flex-col items-center justify-center h-full">
        <div class="mb-4 space-y-1">
          <h2 class="text-base md:text-xl font-bold text-white uppercase tracking-wider drop-shadow-lg">
            {line1}
          </h2>
          <h2 class="text-base md:text-xl font-bold text-white uppercase tracking-wider drop-shadow-lg">
            {line2}
          </h2>
          <h2 class="text-base md:text-xl font-bold text-white uppercase tracking-wider drop-shadow-lg">
            {line3}
          </h2>
        </div>

        <div class="flex flex-col items-start w-fit mx-auto mt-2">
          <span class="text-gray-300 tracking-[0.5em] text-xs md:text-sm uppercase font-medium mb-1 drop-shadow-md pl-1">
            T E A M
          </span>
          <h1 class="text-3xl md:text-5xl font-black text-white uppercase tracking-tight drop-shadow-2xl text-left leading-none">
            EMAIL RAKYAT
          </h1>
          <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center items-center">
            <a 
              href="https://wa.me/60124099956" 
              target="_blank"
              onclick="return gtag_report_conversion('https://wa.me/60124099956');"
              class="bg-yellow-500 hover:bg-yellow-400 text-black font-black text-lg py-4 px-10 rounded-lg shadow-lg hover:shadow-yellow-500/20 transition-all transform hover:-translate-y-1 flex items-center gap-2"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              HUBUNGI SEGERA
            </a>
          </div>
        </div>

      </div>
    ) : (
      /* --- SUB-PAGE LAYOUT --- */
      <div class="flex flex-col items-center justify-center pt-8">
        <div class="w-12 h-1 bg-yellow-500 mb-6"></div>
        
        <h1 class="text-2xl sm:text-3xl md:text-5xl font-black text-white uppercase tracking-widest drop-shadow-2xl">
          {line1}
        </h1>
      </div>
    )}

  </div>
</section>