---
// src/components/Navbar.astro
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.webp';

const links = [
  { text: "Tentang Kami", href: "/tentang" },
  { text: "Perkhidmatan", href: "/perkhidmatan" },
  { text: "Berita", href: "/berita" },
  { text: "Hubungi Kami", href: "/hubungi" },
];
---

<nav class="bg-black/80 border-b border-gray-800 sticky top-0 z-50 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-20 items-center">
      
      <a href="/" class="flex-shrink-0 flex items-center gap-3 hover:opacity-80 transition-opacity">
        <Image 
          src={logoImg} 
          alt="Email Rakyat Logo" 
          class="w-10 h-10 object-contain" 
          loading="eager"
        />
        <span class="text-white font-bold text-xl tracking-wider">EMAIL RAKYAT</span>
      </a>

      <div class="hidden md:flex items-center space-x-8">
        {links.map((link) => (
          link.href === '/hubungi' ? (
            /* BUTTON STYLE FOR CONTACT ONLY */
            <a 
              href={link.href} 
              onclick="return gtag_report_conversion('https://wa.me/60124099956');"
              target="_blank"
              class="bg-yellow-500 text-black px-5 py-2 text-sm font-extrabold rounded-full shadow-lg hover:bg-yellow-400 hover:shadow-yellow-500/20 hover:scale-105 transition-all ml-2 flex items-center"
            >
              {link.text}
            </a>
          ) : (
            /* ORIGINAL CLEAN STYLE FOR OTHER LINKS */
            <a 
              href={link.href} 
              class="text-gray-300 hover:text-white hover:border-b-2 hover:border-yellow-500 px-1 py-2 text-sm font-medium transition-all"
            >
              {link.text}
            </a>
          )
        ))}
      </div>

      <div class="md:hidden flex items-center">
        <button id="mobile-menu-btn" class="text-gray-300 hover:text-white focus:outline-none p-2">
          <span class="text-2xl">â˜°</span>
        </button>
      </div>

    </div>
  </div>

  <div id="mobile-menu" class="hidden bg-black/95 backdrop-blur-xl border-b border-gray-800 absolute w-full left-0 top-20 shadow-2xl z-50">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {links.map((link) => (
         link.href === '/hubungi' ? (
            /* BUTTON STYLE FOR CONTACT MOBILE - FIXED WITH TRACKING */
            <a 
              href={link.href} 
              onclick="return gtag_report_conversion('https://wa.me/60124099956');"
              target="_blank"
              class="block w-full text-center bg-yellow-500 text-black font-extrabold px-3 py-4 mt-4 rounded-lg shadow-lg hover:bg-yellow-400 transition-all"
            >
              {link.text}
            </a>
         ) : (
            /* ORIGINAL STYLE FOR OTHER LINKS MOBILE */
            <a 
              href={link.href} 
              class="text-gray-300 hover:text-white hover:bg-white/10 block px-3 py-4 text-base font-medium border-l-4 border-transparent hover:border-yellow-500 transition-all"
            >
              {link.text}
            </a>
         )
      ))}
    </div>
  </div>
</nav>

<script is:inline>
  function initMobileMenu() {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');

    if (!btn || !menu) return;

    // Toggle menu
    btn.onclick = function(e) {
      e.stopPropagation();
      menu.classList.toggle('hidden');
    };

    // Close when clicking a link
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => menu.classList.add('hidden'));
    });

    // Close when clicking outside
    document.onclick = function(e) {
      if (!menu.contains(e.target) && !btn.contains(e.target)) {
        menu.classList.add('hidden');
      }
    };
  }

  // Initialize immediately and on page navigation (for Astro View Transitions)
  initMobileMenu();
  document.addEventListener('astro:page-load', initMobileMenu);
</script>