---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Halaman Tidak Dijumpai" noindex={true}>
    <div class="min-h-[70vh] flex flex-col items-center justify-center text-center px-4">
        <h1 class="text-6xl md:text-8xl font-black text-yellow-500 mb-4">404</h1>
        <p class="text-xl md:text-2xl text-white mb-8">Halaman ini telah hilang atau dipindahkan.</p>
        
        <a href="/" class="px-6 py-3 bg-white text-gray-900 font-bold rounded hover:bg-yellow-500 transition-colors">
            Kembali ke Halaman Utama
        </a>
    </div>
</Layout>